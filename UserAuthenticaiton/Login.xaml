<Window x:Class="FishStore.UserAuthenticaiton.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.UserAuthenticaiton"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="900">
    <Grid>
        <Image x:Name="Sidelog" HorizontalAlignment="Left" Height="600" Width="300" Source="/UserAuthenticaiton/minimal_logo.png" Stretch="Fill" VerticalAlignment="Bottom" />
        <TextBlock x:Name="Sign_up" Hyperlink.Click="" HorizontalAlignment="Left" Height="34" Margin="412,466,0,0" TextWrapping="Wrap" Text="Sign-up" VerticalAlignment="Top" Width="89" FontSize="22" FontFamily="Comic Sans MS" TextAlignment="Center" FontStyle="Italic"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="555,66,0,0" VerticalAlignment="Top" Height="78" Width="122" FontSize="48" FontFamily="Comic Sans MS"/>
        <Label Content="Username" HorizontalAlignment="Left" Height="34" Margin="412,203,0,0" VerticalAlignment="Top" Width="89" FontSize="16" FontFamily="Comic Sans MS"/>
        <StackPanel HorizontalAlignment="Left" Height="1" Margin="412,237,0,0" VerticalAlignment="Top" Width="395" Background="#FFD3B269"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="33" Margin="501,204,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="306" FontSize="16" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" TextChanged="username_TextChanged"/>


        <Label Content="Password" HorizontalAlignment="Left" Height="34" Margin="412,338,0,0" VerticalAlignment="Top" Width="89" FontSize="16" FontFamily="Comic Sans MS"/>
        <StackPanel HorizontalAlignment="Left" Height="1" Margin="412,377,0,0" VerticalAlignment="Top" Width="395" Background="#FFD3B269"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="33" Margin="501,339,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="306" FontSize="16" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" TextChanged="password_TextChanged"/>
        <Button x:Name="btn_Login" Content="Login" HorizontalAlignment="Left" Height="43" Margin="674,466,0,0" VerticalAlignment="Top" Width="133" FontSize="16" FontFamily="Comic Sans MS" Background="#FFD3B269" Click="btn_Login_Click"/>




    </Grid>
</Window>
