<Window x:Class="FishStore.Admin.Categories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.Admin"
        mc:Ignorable="d"
        Title="Category"
        Height="700"
        Width="1000"
        Background="#FFF8F8F8"
        FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search Box -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Category Management"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#FF4CAF50"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>
        <Button Content="Back to Admin Panel" Click="BackToAdminPanel_Click" Margin="10,10,831,20" RenderTransformOrigin="1.125,0.532" />
        <!-- Search Box -->
        <TextBox x:Name="SearchTextBox"
             Grid.Row="1"
             Height="30"
             FontSize="15"
             Margin="0,0,0,20"
             Width="300"
             TextAlignment="Left"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             KeyUp="SearchTextBox_KeyUp"
             TextChanged="SearchTextBox_TextChanged"/>

        <!-- Input Form for Add/Edit -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10" ItemWidth="200">
                <TextBox x:Name="IdTextBox" Margin="5" Height="30" Width="180" Text="ID" IsReadOnly="True"/>
                <TextBox x:Name="NameTextBox" Margin="5" Height="30" Width="180" Text="Name"/>
                <TextBox x:Name="DescriptionTextBox" Margin="5" Height="30" Width="180" Text="Description"/>
                <!-- Status Radio Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Status:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                    <RadioButton x:Name="ActiveRadioButton" Content="Active" GroupName="Status" Margin="5,0"/>
                    <RadioButton x:Name="InactiveRadioButton" Content="Inactive" GroupName="Status" Margin="5,0"/>
                </StackPanel>
            </WrapPanel>



        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="CategoriesDataGrid"
              Grid.Row="3"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="True"
              SelectionMode="Single"
              Margin="0,0,0,20"
              HeadersVisibility="Column"
              AlternatingRowBackground="#FFEFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CategoryId" Binding="{Binding CategoryId}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="CategoryName" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <WrapPanel Grid.Row="4"
               Orientation="Horizontal"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,10,0,0"
               ItemHeight="35"
               ItemWidth="140">

            <Button Content="Add " Click="Add_Click" Margin="5" />
            <Button Content="Edit " Click="Edit_Click" Margin="5" />
            <Button Content="Save" Click="Save_Click" Margin="5" />
            <Button Content="Refresh" Click="Refresh_Click" Margin="5" />
            <Button Content="Change Status" Click="ChangeStatus_Click" Margin="5" />

        </WrapPanel>
    </Grid>
</Window>
