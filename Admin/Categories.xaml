<Window x:Class="FishStore.Admin.Categories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.Admin"
        mc:Ignorable="d"
        Title="Category"
        Height="700"
        Width="1000"
        Background="#FFF8F8F8"
        FontFamily="Comic Sans MS">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Category Management"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FF4CAF50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Back Button -->
        <Button Content="Back to Admin Panel"
                Click="BackToAdminPanel_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Width="150"
                Height="30"/>

        <!-- Search Box -->
        <TextBox x:Name="SearchTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="15"
                 Width="300"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="0,0,0,20"        
                 KeyUp="SearchTextBox_KeyUp"
                 TextChanged="SearchTextBox_TextChanged"/>

        <!-- Input Fields -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <UniformGrid Columns="3" HorizontalAlignment="Center" Margin="0,10,0,10">
                <!-- ID -->
                <StackPanel Margin="5">
                    <TextBlock Text="Category ID"/>
                    <TextBox x:Name="IdTextBox" Height="30" Width="180" IsReadOnly="True"/>
                </StackPanel>

                <!-- Name -->
                <StackPanel Margin="5">
                    <TextBlock Text="Name"/>
                    <TextBox x:Name="NameTextBox" Height="30" Width="180"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="5">
                    <TextBlock Text="Description"/>
                    <TextBox x:Name="DescriptionTextBox" Height="30" Width="180"/>
                </StackPanel>
            </UniformGrid>

            <!-- Status -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Status:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                <RadioButton x:Name="ActiveRadioButton" Content="Active" GroupName="Status" Margin="5,0"/>
                <RadioButton x:Name="InactiveRadioButton" Content="Inactive" GroupName="Status" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="CategoriesDataGrid"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectionMode="Single"
                  Margin="0,0,0,20"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#FFEFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CategoryId" Binding="{Binding CategoryId}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="CategoryName" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <WrapPanel Grid.Row="4"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   ItemHeight="35"
                   ItemWidth="140">

            <Button Content="Add" Click="Add_Click" Margin="5" />
            <Button Content="Edit" Click="Edit_Click" Margin="5" />
            <Button Content="Save" Click="Save_Click" Margin="5" />
            <Button Content="Refresh" Click="Refresh_Click" Margin="5" />
            <Button Content="Change Status" Click="ChangeStatus_Click" Margin="5" />
        </WrapPanel>
    </Grid>
</Window>
