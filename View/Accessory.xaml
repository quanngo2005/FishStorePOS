<Window x:Class="FishStore.Admin.Accessory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.Admin"
        mc:Ignorable="d"
        Title="Accounts"
        Height="700"
        Width="1000"
        Background="#FFF8F8F8"
        FontFamily="Comic Sans MS">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Accessory Management"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FF4CAF50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Back Button -->
        <Button Content="Back"
                Click="BackToAdminPanel_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Width="150"
                Height="30"/>

        <!-- Search Box -->
        <TextBox x:Name="SearchTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="15"
                 Width="350"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="0,0,0,20"
                 
                 KeyUp="SearchTextBox_KeyUp"
                 TextChanged="SearchTextBox_TextChanged"/>

        <!-- Input Fields -->
        <StackPanel x:Name="TextBoxes" Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <UniformGrid Columns="3" HorizontalAlignment="Center" Margin="0,10,0,10">
                <!-- ID -->
                <StackPanel Margin="5">
                    <TextBlock Text="Accessory ID"/>
                    <TextBox x:Name="AccessoryIdTextBox" Height="30" Width="200" IsReadOnly="True"/>
                </StackPanel>

                <!-- Name -->
                <StackPanel Margin="5">
                    <TextBlock Text="Accessory Name"/>
                    <TextBox x:Name="AccessoryNameTextBox" Height="30" Width="200"/>
                </StackPanel>

                <!-- Category -->
                <StackPanel Margin="5">
                    <TextBlock Text="Category"/>
                    <ComboBox x:Name="CategoryComboBox" Height="30" Width="200"/>
                </StackPanel>

                <!-- Price -->
                <StackPanel Margin="5">
                    <TextBlock Text="Price"/>
                    <TextBox x:Name="PriceTextBox" Height="30" Width="200"/>
                </StackPanel>

                <!-- Quantity -->
                <StackPanel Margin="5">
                    <TextBlock Text="Quantity Available"/>
                    <TextBox x:Name="QuantityTextBox" Height="30" Width="200"/>
                </StackPanel>

                <!-- Image URL -->
                <StackPanel Margin="5">
                    <TextBlock Text="Image URL"/>
                    <TextBox x:Name="ImageUrlTextBox" Height="30" Width="245"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Grid.ColumnSpan="3" Width="787">
                    <TextBlock Text="Description"/>
                    <TextBox x:Name="DescriptionTextBox"
                             Height="60"
                             Width="747"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>
            </UniformGrid>

            <!-- Status -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Status:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                <RadioButton x:Name="ActiveRadioButton" Content="Active" GroupName="Status" Margin="5,0"/>
                <RadioButton x:Name="InactiveRadioButton" Content="Inactive" GroupName="Status" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="AccessoriesDataGrid"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectionMode="Single"
                  Margin="0,0,0,20"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#FFEFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Accessory ID" Binding="{Binding AccessoryId}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding AccessoryName}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityAvailable}" Width="*"/>
                <DataGridTextColumn Header="Image URL" Binding="{Binding ImageUrl}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <WrapPanel Grid.Row="4"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   ItemHeight="35"
                   ItemWidth="140">

            <Button x:Name="Add" Content="Add" Click="Add_Click" Margin="5" />
            <Button x:Name="Edit" Content="Edit" Click="Edit_Click" Margin="5" />
            <Button x:Name="Save" Content="Save" Click="Save_Click" Margin="5" />
            <Button Content="Refresh" Click="Refresh_Click" Margin="5" />
            <Button Content="Change Status" Click="ChangeStatus_Click" Margin="5" />
        </WrapPanel>
    </Grid>
</Window>
