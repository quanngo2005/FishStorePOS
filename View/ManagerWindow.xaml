<Window x:Class="FishStore.View.ManagerWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FishStore.Admin"
    mc:Ignorable="d"
    Title="Admin Dashboard"
    Height="450"
    Width="900"
    ResizeMode="NoResize"
    Background="#FFF8F8F8"
    FontFamily="Comic Sans MS">


    <Window.Resources>
        <!-- Style dùng chung cho các nút menu -->
        <Style x:Key="AdminMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2,10,2,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackPanel Grid.Column="0" Background="#FFEFEFEF" >
            <TextBlock Text="ADMIN PANEL"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="Black"
                   Margin="0,10,0,20"
                   HorizontalAlignment="Center"/>
            <Button Content="Categories" Style="{StaticResource AdminMenuButtonStyle}" Click="CategoryWindow_Click"/>
            <Button Content="Customers" Style="{StaticResource AdminMenuButtonStyle}" Click="CustomerWindow_Click"/>
            <Button Content="Transactions" Style="{StaticResource AdminMenuButtonStyle}" Click="TransactionWindow_Click"/>
            <Button Content="Fishes" Style="{StaticResource AdminMenuButtonStyle}" Click="FishWindow_Click"/>
            <Button Content="Orders" Style="{StaticResource AdminMenuButtonStyle}" Click="OrderWindow_Click"/>
            <Button Content="Accessory" Style="{StaticResource AdminMenuButtonStyle}" Click="Accessory_Click"/>
            <Separator Margin="0,20,0,10"/>
            <Button Content="Logout"
                Style="{StaticResource AdminMenuButtonStyle}"
                Background="#FFE53935"
                Click="Logout_Click"/>
        </StackPanel>

        <!-- MAIN CONTENT AREA -->
        <Border Grid.Column="1"
            Margin="20"
            Background="White"
            CornerRadius="10"
            BorderBrush="#FFDDDDDD"
            BorderThickness="1"
            Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Reports Area"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF888888"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <TextBlock Text="(Static reports will be displayed here)"
                       FontSize="14"
                       Foreground="#FFAAAAAA"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
