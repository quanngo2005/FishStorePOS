<Window x:Class="FishStore.View.ManagerWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FishStore.Admin"
    mc:Ignorable="d"
    Title="Manager Dashboard"
    Height="450"
    Width="900"
    
    Background="#FFF8F8F8"
    FontFamily="Comic Sans MS">


    <Window.Resources>
        <!-- Style dùng chung cho các nút menu -->
        <Style x:Key="AdminMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2,10,2,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackPanel Grid.Column="0" Background="#FFEFEFEF"  >
            <TextBlock Text="MANAGER PANEL"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="Black"
                   Margin="0,10,0,20"
                   HorizontalAlignment="Center"/>
            <Button Content="Categories" Style="{StaticResource AdminMenuButtonStyle}" Click="CategoryWindow_Click"/>
            <Button Content="Customers" Style="{StaticResource AdminMenuButtonStyle}" Click="CustomerWindow_Click"/>
            <Button Content="Transactions" Style="{StaticResource AdminMenuButtonStyle}" Click="TransactionWindow_Click"/>
            <Button Content="Fishes" Style="{StaticResource AdminMenuButtonStyle}" Click="FishWindow_Click"/>
            <Button Content="Orders" Style="{StaticResource AdminMenuButtonStyle}" Click="OrderWindow_Click"/>
            <Button Content="Accessory" Style="{StaticResource AdminMenuButtonStyle}" Click="Accessory_Click"/>
            <Separator Margin="0,20,0,10"/>
            <Button Content="Logout"
                Style="{StaticResource AdminMenuButtonStyle}"
                Background="#FFE53935"
                Click="Logout_Click"/>
        </StackPanel>

        <!-- MAIN CONTENT AREA -->
        <Border Grid.Column="1"
            Margin="20,20,20,120"
            Background="White"
            CornerRadius="10"
            BorderBrush="#FFDDDDDD"
            BorderThickness="1"
            Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" >
                <TextBlock Text="Reports Area"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF888888"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                <DataGrid x:Name="FishReportDataGrid" AutoGenerateColumns="False"
                  AlternatingRowBackground="#FFF5F5F5"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="10"
                  FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" />
                        <DataGridTextColumn Header="Month" Binding="{Binding Month}" />
                        <DataGridTextColumn Header="Fish" Binding="{Binding FishName}" />
                        <DataGridTextColumn Header="Imported" Binding="{Binding ImportedQuantity}" />
                        <DataGridTextColumn Header="Sold" Binding="{Binding SoldQuantity}" />
                        <DataGridTextColumn Header="Revenue" Binding="{Binding TotalRevenue, StringFormat={}{0:N0} ₫}" />
                        <DataGridTextColumn Header="Cost" Binding="{Binding TotalCost, StringFormat={}{0:N0} ₫}" />
                        <DataGridTextColumn Header="Profit" Binding="{Binding Profit, StringFormat={}{0:N0} ₫}" />
                    </DataGrid.Columns>
                </DataGrid>
                <TextBox x:Name="AnalysisTextBox"
                FontSize="14"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                Height="100"
                IsReadOnly="True"
                Margin="10"/>
                <Button Content="Phân tích tồn kho"
                Click="AnalyzeButton_Click"
                Width="150"
                Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
