<Window x:Class="FishStore.Admin.Accounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.Admin"
        mc:Ignorable="d"
        Title="Accounts"
        Height="700"
        Width="1000"
        Background="#FFF8F8F8"
        FontFamily="Comic Sans MS">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Accounts Management"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FF4CAF50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Back Button -->
        <Button Content="Back"
                Click="BackToAdminPanel_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Width="150"
                Height="30"/>

        <!-- Search Box -->
        <TextBox x:Name="SearchTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="15"
                 Width="300"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="0,0,0,20"
                 KeyUp="SearchTextBox_KeyUp"
                 TextChanged="SearchTextBox_TextChanged"/>

        <!-- Input Form -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <UniformGrid Columns="6" HorizontalAlignment="Center" Margin="0,10,0,10">
                <!-- ID -->
                <StackPanel Margin="5">
                    <TextBlock Text="ID"/>
                    <TextBox x:Name="UserIdTextBox" Height="30" Width="150" IsReadOnly="True"/>
                </StackPanel>

                <!-- Username -->
                <StackPanel Margin="5">
                    <TextBlock Text="Username"/>
                    <TextBox x:Name="UsernameTextBox" Height="30" Width="150"/>
                </StackPanel>

                <!-- Full Name -->
                <StackPanel Margin="5">
                    <TextBlock Text="Full Name"/>
                    <TextBox x:Name="FullNameTextBox" Height="30" Width="150"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="5">
                    <TextBlock Text="Password"/>
                    <TextBox x:Name="PasswordTextBox" Height="30" Width="150"/>
                </StackPanel>

                <!-- Phone -->
                <StackPanel Margin="5">
                    <TextBlock Text="Phone Number"/>
                    <TextBox x:Name="PhoneTextBox" Height="30" Width="150"/>
                </StackPanel>

                <!-- Role -->
                <StackPanel Margin="5">
                    <TextBlock Text="Role"/>
                    <ComboBox x:Name="RoleComboBox" Height="30" Width="150"/>
                </StackPanel>
            </UniformGrid>

            <!-- Status Radio Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Status:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                <RadioButton x:Name="ActiveRadioButton" Content="Active" GroupName="Status" Margin="5,0"/>
                <RadioButton x:Name="InactiveRadioButton" Content="Inactive" GroupName="Status" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="AccountsDataGrid"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectionMode="Single"
                  Margin="0,0,0,20"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#FFEFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Password" Binding="{Binding PasswordHash}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <WrapPanel Grid.Row="4"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   ItemHeight="35"
                   ItemWidth="140">

            <Button Content="Add Account" Click="AddAccount_Click" Margin="5" />
            <Button Content="Edit Account" Click="EditAccount_Click" Margin="5" />
            <Button Content="Save" Click="SaveAccount_Click" Margin="5" />
            <Button Content="Refresh" Click="Refresh_Click" Margin="5" />
            <Button Content="Change Status" Click="ChangeStatus_Click" Margin="5" />
        </WrapPanel>
    </Grid>
</Window>
