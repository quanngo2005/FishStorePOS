<Window x:Class="FishStore.View.CustomerSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tìm khách hàng" Height="220" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter full name or phonenumber"/>
            <TextBox x:Name="SearchBox" Margin="0,5,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="New customer" Width="120" Margin="0,0,10,0" Click="AddCustomer_Click"/>
                <Button Content="Search and choice" Width="100" Click="SearchAndSelect_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
