<Window
    x:Class="FishStore.Admin.Order"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FishStore.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Accounts"
    Width="1000"
    Height="700"
    Background="#FFF8F8F8"
    FontFamily="Comic Sans MS"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Title  -->
            <RowDefinition Height="Auto" />
            <!--  Search  -->
            <RowDefinition Height="Auto" />
            <!--  Input Fields  -->
            <RowDefinition Height="*" />
            <!--  DataGrid  -->
            <RowDefinition Height="Auto" />
            <!--  Buttons  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#FF4CAF50"
            Text="Order Management" />

        <!--  Back Button  -->
        <Button
            Width="150"
            Height="30"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="BackToAdminPanel_Click"
            Content="Back" />

        <!--  Search Box  -->
        <TextBox
            x:Name="SearchTextBox"
            Grid.Row="1"
            Width="350"
            Height="30"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="15"
            KeyUp="SearchTextBox_KeyUp"
            TextChanged="SearchTextBox_TextChanged" />
        <!--  DataGrid  -->
        <DataGrid
            x:Name="OrdersDataGrid"
            Grid.Row="3"
            Margin="0,0,0,20"
            AlternatingRowBackground="#FFEFEFEF"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="True"
            HeadersVisibility="Column"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding OrderId}"
                    Header="OrderID" />
                <DataGridTextColumn Header="Customer Name"
                    Binding="{Binding Customer.FullName}" 
                    Width="*" />
                <DataGridTextColumn Header="Created By"
                    Binding="{Binding CreatedByNavigation.FullName}" 
                    Width="*" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding OrderDate}"
                    Header="Order Date" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalAmount}"
                    Header="Total Amount" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Status}"
                    Header="Status" />
                <DataGridTemplateColumn Width="*" Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Click="DetailButton_Click"
                                Content="Detail"
                                Tag="{Binding OrderId}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            >
            <Button Content="Add Order"
            Width="120"
            Margin="5"
            Name="AddOrderButton"
            Click="AddOrder_Click"
            Background="#4CAF50"
            Foreground="White"
            FontWeight="Bold"/>

            <Button Content="Delete Order"
            Width="120"
            Margin="5"
            Name="DeleteOrderButton"
            Click="DeleteOrder_Click"
            Background="#f44336"
            Foreground="White"
            FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
