<Window x:Class="FishStore.View.AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm khách hàng mới" Height="220" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Họ và tên:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5,0,10"/>

            <Button Content="Lưu khách hàng" HorizontalAlignment="Right" Width="120" Click="SaveCustomer_Click"/>
        </StackPanel>
    </Grid>
</Window>