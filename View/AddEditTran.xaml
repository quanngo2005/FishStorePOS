<Window x:Class="FishStore.View.AddEditTran"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Form" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        FontFamily="Comic Sans MS">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add / Edit Transaction"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Form Inputs -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400">

            <!-- Transaction Type -->
            <TextBlock Text="Transaction Type" FontWeight="Bold" Margin="0,5,0,0"/>
            <ComboBox x:Name="TransactionTypeComboBox" Margin="0,5" Height="30" SelectionChanged="TransactionTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Fish" />
                <ComboBoxItem Content="Accessory" />
            </ComboBox>

            <!-- Item -->
            <TextBlock Text="Item" FontWeight="Bold" Margin="0,5,0,0"/>
            <ComboBox x:Name="ItemComboBox" Margin="0,5" Height="30" SelectionChanged="ItemComboBox_SelectionChanged" />

            <!-- Quantity -->
            <TextBlock Text="Quantity" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5" Height="30" />

            <!-- Unit Cost -->
            <TextBlock Text="Unit Cost" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox x:Name="UnitCostTextBox" Margin="0,5" Height="30" />

            <!-- Transaction Date -->
            <TextBlock Text="Transaction Date" FontWeight="Bold" Margin="0,5,0,0"/>
            <DatePicker x:Name="TransactionDatePicker" Margin="0,5" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Margin="10" Click="SaveButton_Click" Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Width="100" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
