<Window x:Class="FishStore.Admin.Fishes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.Admin"
        mc:Ignorable="d"
        Title="Fish"
        Height="800"
        Width="1100"
        Background="#FFF8F8F8"
        FontFamily="Comic Sans MS">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Fish Management"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FF4CAF50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Back Button -->
        <Button Content="Back"
                Click="BackToAdminPanel_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Width="150"
                Height="30"/>

        <!-- Search Box -->
        <TextBox x:Name="SearchTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="15"
                 Width="350"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="0,0,0,20"
                 KeyUp="SearchTextBox_KeyUp"
                 TextChanged="SearchTextBox_TextChanged"/>

        <!-- Input Fields -->
        <StackPanel x:Name="TextBoxes" Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <UniformGrid Columns="4" HorizontalAlignment="Center" Margin="0,10,0,10">
                <!-- FishID -->
                <StackPanel Margin="5">
                    <TextBlock Text="Fish ID"/>
                    <TextBox x:Name="FishIdTextBox" Height="30" Width="180" IsReadOnly="True"/>
                </StackPanel>

                <!-- FishName -->
                <StackPanel Margin="5">
                    <TextBlock Text="Fish Name"/>
                    <TextBox x:Name="FishNameTextBox" Height="30" Width="180"/>
                </StackPanel>

                <!-- Species -->
                <StackPanel Margin="5">
                    <TextBlock Text="Species"/>
                    <TextBox x:Name="SpeciesTextBox" Height="30" Width="180"/>
                </StackPanel>

                <!-- Color -->
                <StackPanel Margin="5">
                    <TextBlock Text="Color"/>
                    <TextBox x:Name="ColorTextBox" Height="30" Width="180"/>
                </StackPanel>

                <!-- Size -->
                <StackPanel Margin="5">
                    <TextBlock Text="Size"/>
                    <ComboBox x:Name="SizeComboBox" Height="30" Width="180">
                        <ComboBoxItem Content="Small"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="Large"/>
                     </ComboBox>
                </StackPanel>

                <!-- Price -->
                <StackPanel Margin="5">
                    <TextBlock Text="Price"/>
                    <TextBox x:Name="PriceTextBox" Height="30" Width="180"/>
                </StackPanel>

                <!-- Quantity -->
                <StackPanel Margin="5">
                    <TextBlock Text="Quantity Available"/>
                    <TextBox x:Name="QuantityTextBox" Height="30" Width="180"/>
                </StackPanel>

                <!-- CategoryID -->
                <StackPanel Margin="5">
                    <TextBlock Text="Category"/>
                    <ComboBox x:Name="CategoryComboBox" Height="30" Width="180"
                     DisplayMemberPath="Name"
                    SelectedValuePath="CategoryId"/>

                </StackPanel>

                <!-- Image URL -->
                <StackPanel Margin="5" Width="Auto">
                    <TextBlock Text="Image URL"/>
                    <TextBox x:Name="ImageUrlTextBox" Height="30" Width="auto"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Grid.ColumnSpan="4" Width="auto">
                    <TextBlock Text="Description"/>
                    <TextBox x:Name="DescriptionTextBox" Height="30" Width="auto" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </UniformGrid>

            <!-- Status -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Status:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                <RadioButton x:Name="ActiveRadioButton" Content="Active" GroupName="Status" Margin="5,0"/>
                <RadioButton x:Name="InactiveRadioButton" Content="Inactive" GroupName="Status" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="FishesDataGrid"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectionMode="Single"
                  Margin="0,0,0,20"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#FFEFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fish ID" Binding="{Binding FishId}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FishName}" Width="*"/>
                <DataGridTextColumn Header="Species" Binding="{Binding Species}" Width="*"/>
                <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="Qty Available" Binding="{Binding QuantityAvailable}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Image URL" Binding="{Binding ImageUrl}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <WrapPanel Grid.Row="4"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   ItemHeight="35"
                   ItemWidth="140">

            <Button x:Name="Add" Content="Add" Click="Add_Click" Margin="5" />
            <Button x:Name="Edit" Content="Edit" Click="Edit_Click" Margin="5" />
            <Button x:Name="Save" Content="Save" Click="Save_Click" Margin="5" />
            <Button Content="Refresh" Click="Refresh_Click" Margin="5" />
            <Button Content="Change Status" Click="ChangeStatus_Click" Margin="5" />
        </WrapPanel>
    </Grid>
</Window>
