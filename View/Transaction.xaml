<Window x:Class="FishStore.View.Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Viewer" Height="600" Width="1000"
        Background="#FFF8F8F8" FontFamily="Comic Sans MS">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Controls -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Transaction History"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FF4CAF50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        <Button Content="Back"
        Click="BackToAdminPanel_Click"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,10,10,0"
        Width="150"
        Height="30"/>
        <!-- Filter and Search Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" >
            <ComboBox x:Name="TransactionTypeComboBox" Width="200" Height="30" SelectionChanged="TransactionTypeComboBox_SelectionChanged"/>
            <StackPanel Margin="20" Height="64"> 
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="SearchBox" Width="200" Height="30"  KeyUp="SearchBox_KeyUp" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>
            
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="TransactionDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#FFEFEFEF"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" />
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitCost}" Width="*" />
                <DataGridTextColumn Header="Total" Binding="{Binding TotalCost}" Width="*" />
                <DataGridTextColumn Header="CreatedBy" Binding="{Binding CreatedBy}" Width="*" />
                <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- Action Buttons -->
        <WrapPanel Grid.Row="3"
           Orientation="Horizontal"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
                   
           Margin="0,10,0,0"
           ItemHeight="35"
           ItemWidth="140">

            <Button x:Name="AddButton" Content="Add" Click="Add_Click" Margin="5" />
            <Button x:Name="EditButton" Content="Edit" Click="Edit_Click" Margin="5" />
   
        </WrapPanel>
    </Grid>
</Window>
