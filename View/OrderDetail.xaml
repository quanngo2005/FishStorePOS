<Window x:Class="FishStore.Admin.OrderDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishStore.Admin"
        mc:Ignorable="d"
        Title="Accounts"
        Height="600"
        Width="700"
        Background="#FFF8F8F8"
        FontFamily="Comic Sans MS">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Order Management"
           FontSize="28"
           FontWeight="Bold"
           Foreground="#FF4CAF50"
           HorizontalAlignment="Center"
           Margin="0,0,0,20"/>
        <DataGrid x:Name="OrderItemGrid" Grid.Row="3"
        AutoGenerateColumns="False"
        CanUserAddRows="False"
        CanUserDeleteRows="True"
        SelectionMode="Single"
        Margin="0,0,0,20"
        HeadersVisibility="Column"
        AlternatingRowBackground="#FFEFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding ItemType}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="2*" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" />
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="*" />
                <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Right">

            <!-- Total Price -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Total Price: "
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="Black"
                   VerticalAlignment="Center"/>
                <TextBlock x:Name="TotalPriceText"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#FF4CAF50"
                   Margin="5,0,0,0"
                   VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" ItemWidth="100" ItemHeight="35" Margin="0,0,0,0">
                <Button Content="Export"
                Width="100"
                Height="35"
                Background="#FF4CAF50"
                Foreground="White"
                FontWeight="Bold"
                Click="ExportButton_Click"
                Margin="5,0"/>

                <Button Content="Close"
                Width="100"
                Height="35"
                Background="#FF4CAF50"
                Foreground="White"
                FontWeight="Bold"
                Click="CloseButton_Click"
                Margin="5,0"/>
            </WrapPanel>

        </StackPanel>



    </Grid>
</Window>
